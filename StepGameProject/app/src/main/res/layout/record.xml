<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recodeLogo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="45dp"
                android:paddingRight="-35dp">

                <EditText
                    android:id="@+id/recodeTodayText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="no"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:text="오늘 기록 :"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/recodeTodayEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="no"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:paddingRight="25dp"
                    android:text="150,000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/recodeTodayKM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:text="KM"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="45dp"
                android:paddingRight="-35dp">

                <EditText
                    android:id="@+id/recodeAllText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:text="총 기록 :"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/recodeAllEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="no"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:paddingRight="25dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/recodeAllKM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:text="KM"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="no"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="45dp"
                android:paddingRight="-35dp">

                <EditText
                    android:id="@+id/recodeCal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:text="소비 칼로리 : "
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/recodeCalEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autofillHints="no"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:paddingRight="25dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/recodeCalKacl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Kcal"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="65dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/recodeRankButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="랭킹"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/recodeContentButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="지도"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/recodeResetButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="리셋"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>